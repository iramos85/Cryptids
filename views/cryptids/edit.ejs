<h1>Edit Entry</h1>
<form action="/fruits/<%=fruit.id%>?_method=PUT" method="POST">
    <!--  NOTE: the form is pre-populated with values for the server-->
    Name: <input type="text" value="<%=cryptids.name%>" /><br/>
    Description: <textarea value="<%=cryptids.description%>" name="description"></textarea><br/>
    Image: <input type="url" value="<%=cryptids.images%>" /><br/>
    Temperament:
    <input type="checkbox" name="readyToEat"
        <% if(cryptids.temperament === true){ %>
            checked
        <% } %>
    />
    <br/>
    <input type="submit" name="" value="Submit Changes"/>
</form>

